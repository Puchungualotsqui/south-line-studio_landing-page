---
// @ts-ignore
import { Icon } from "astro-icon/components";

const included = [
  "One-page website",
  "Mobile-friendly layout",
  "Services section",
  "About section",
  "Contact section",
  "Google Maps integration",
  "Call and email buttons",
  "Stock images (if needed)",
];

const extras = [
  "Product catalogs",
  "Menus with many items",
  "Online stores (e-commerce)",
  "Booking or appointment systems",
  "SEO campaigns or ongoing SEO work",
  "Full redesigns after delivery",
];
---

<section id="included" class="mt-28">
  <!-- Heading -->
  <div class="mx-auto max-w-3xl">
    <h2 class="text-4xl lg:text-5xl font-bold tracking-tight">
      Whatâ€™s included
    </h2>

    <p class="text-lg mt-4 text-slate-600">
      Everything needed for a clear, professional online presence. No extras, no surprises.
    </p>
  </div>

  <!-- Content -->
  <div class="mx-auto max-w-3xl mt-12">
    <div class="grid sm:grid-cols-2 gap-12">
      <!-- Included -->
      <div>
        <h3 class="text-xl font-semibold mb-4">
          Included in the website
        </h3>

        <ul class="space-y-3">
          {included.map((item) => (
            <li class="flex gap-3 items-start">
              <span class="mt-2 h-2 w-2 rounded-full shrink-0" style="background:#19766E"></span>
              <span class="text-slate-700">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Extras -->
      <div>
        <h3 class="text-xl font-semibold mb-2">
          Extras
        </h3>

        <p class="text-slate-500 mb-4">
          Available if needed, but not part of the standard website.
        </p>

        <ul class="space-y-3">
          {extras.map((item) => (
            <li class="flex gap-3 items-start">
              <span class="mt-2 h-2 w-2 rounded-full shrink-0 bg-slate-400"></span>
              <span class="text-slate-600">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
